<div class="container">

    <h1>Your fav places!</h1>
    <form action="/">
        <div class="d-grid d-flex justify-content-end">
            <button class="btn btn-dark btn-sm mb-3">Search for more</button>
        </div>
    </form>


    <div class="row card align-items-center justify-content-around" style="border-radius: 25px">
        <div class="col">
            {{#each cities}}
            <h2>{{this.cities }}</h2>
            {{/each}}
        </div>
        <div class="col-3">
            <h2 class="city-name" data-name="">
                <span></span>
                <sup></sup>
            </h2>
            <div class="city-temp"><sup></sup></div>
        </div>
        <div class="col-3 align-items-center">
            <figure>
                <img class="city-icon" src="" alt="">
                <figcaption></figcaption>
            </figure>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/api-handler.js"></script>
<script src="/js/api-call.js"></script>